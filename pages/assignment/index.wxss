.page { padding:12px; }
.card { background:#fff; border:1px solid #eee; border-radius:10px; padding:12px; margin-bottom:12px; }

.row { display:flex; align-items:center; margin-bottom:10px; }
.label { width: 88px; color:#666; font-size:14px; }
.ipt { flex:1; border:1px solid #eee; border-radius:8px; padding:6px 8px; background:#f9f9f9; }

.head .title { font-size:16px; font-weight:600; }
.head .sub { color:#888; font-size:12px; margin-top:4px; }
.sec-title { margin:8px 0 6px; font-weight:600; color:#333; }
.note { white-space:pre-wrap; color:#333; }

.item { display:flex; align-items:center; justify-content:space-between; padding:8px 0; border-bottom:1px dashed #eee; }
.item:last-child { border-bottom:0; }
.item .text { flex:1; padding-right:8px; }

.empty { color:#888; font-size:12px; padding:6px 0; }

.hint { font-size:12px; color:#666; margin:6px 0 12px; }
.hint .left { margin-left:6px; }
.hint .warn { color:#c00; }

.controls { display:flex; gap:8px; margin-bottom:8px; }
.btn { flex:1; }
.actions { display:flex; gap:8px; margin-top:8px; }
.btn.ghost { background:#f5f5f5; color:#333; border:1px solid #e5e5e5; }

.meta { font-size:12px; color:#666; margin-top:6px; }

.submit { margin-top:16px; }
.result { margin-top:12px; background:#fafafa; border-radius:8px; padding:10px; }
.raw { font-size:12px; color:#888; white-space:pre-wrap; word-break:break-all; }
